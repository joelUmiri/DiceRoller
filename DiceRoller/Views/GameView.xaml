<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.Views.GameView"
             Title="GameView">
    <VerticalStackLayout>
        <Image Source="{Binding DiceImage}"/>
        <Button
            Text="Clique aqui"/>
        <Label
            Text="{Binding NomeUsuario}"/>
        <Picker>
            <Picker.Items>
                <x:String>1</x:String>
                <x:String>2</x:String>
                <x:String>3</x:String>
                <x:String>4</x:String>
                <x:String>5</x:String>
                <x:String>6</x:String>
            </Picker.Items>
        </Picker>
    </VerticalStackLayout>
</ContentPage>